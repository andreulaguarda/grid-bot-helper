APP_NAME="Grid Bot Helper"
APP_ENV=production
APP_KEY=base64:your-app-key-will-be-generated
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Base de datos SQLite para Docker
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite

# Configuración de sesión
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Configuración de broadcast
BROADCAST_CONNECTION=log

# Configuración de filesystem
FILESYSTEM_DISK=local

# Configuración de queue
QUEUE_CONNECTION=database

# Configuración de cache
CACHE_STORE=file
CACHE_PREFIX=

# Configuración de Redis (no usado en este proyecto)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Configuración de correo (opcional)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Configuración de AWS (no usado)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Configuración de Vite para producción
VITE_APP_NAME="${APP_NAME}"

# Configuración específica para Docker
CONTAINER_ROLE=app
CONTAINER_ENV=production